{% extends 'base.html.twig' %}

{% block title %}Bienvenido
{% endblock %}

{% block body %}
	<div class="w-4/5 m-auto text-center">
		<div class="py-12 border-b border-gray-200">
			<h2 class="text-3xl pt-12 pb-8">
				Ayudamos a reunir mascotas perdidas con sus familias.
			</h2>
			<div class="text-center">
				<a class="py-4 block lg:inline px-6 mt-4 rounded-xl bg-teal-500 text-white uppercase" href="{{ path('app_pet_found') }}">Encontré una mascota</a>
				<a class="py-4 block lg:inline px-6 mt-4 rounded-xl bg-yellow-600 text-white uppercase" href="{{ path('app_pet_lost') }}">Perdí a mi mascota</a>
			</div>
		</div>
		<div class="py-12 mt-10 grid grid-cols-2 lg:grid-cols-4 gap-2 lg:gap-4">
			{% for pet in pets %}
				<div class="text-center">
					<img class="h-[19rem] rounded-lg border-4 border-slate-500" src="{{ asset("uploads/files/#{pet.photo}") }}" alt="{{ pet.name }}">
					<p>{{ pet.status }}</p>
					<p>Reportado el
						{{ pet.createdat|date('d-m-Y') }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
